<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Barlow:wght@100&family=Raleway:wght@100&family=Ubuntu:wght@300&display=swap" rel="stylesheet">

<style>
    html {
        background-image: linear-gradient(to top, #fff1eb 0%, #ace0f9 100%);
    }

    h1 {
        font-family: Barlow;
        font-size: 100px;
        color: #1A132F;
        text-align: center;
    }

    .container {
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

    .peep {
        background: rgb(255, 255, 255, 0.7);
        margin: 20 auto;
        border: 1.5px solid rgb(97, 164, 188, 0.5);
        border-radius: 5px; 
        width: 50%;
        display: block;
    }

    h3 {
        font-family: Ubuntu;
        font-size: 20px;
        text-align: center;
    }

</style>

<h1>Chitter</h1>

<div class="container">
    <% @peeps.each do |peep| %>
        <div class="peep">
            <h3 class="peep-message"><%= peep %></h3>
        </div>
    <% end %>
</div>